{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    //使用 Node.js 的模块解析策略
    "moduleResolution": "node",
    //允许对ES模块的默认导入进行兼容性处理
    "esModuleInterop": true,
    //跳过类型检查
    "skipLibCheck": true,
    //强制文件名大小写一致性
    "forceConsistentCasingInFileNames": true,
    //禁止生成编译输出文件
    "noEmit": true,
    //允许隐式的any类型（设置为false表示不报错）
    "noImplicitAny": false,
    //禁止未使用的函数参数
    "noUnusedParameters": true,
    //强制所有函数都有返回值
    "noImplicitReturns": true,
    //禁止switch语句中没有break语句的情况
    "noFallthroughCasesInSwitch": true
  }
}
